Algoritmo "ATIVIDADE 01 - PREFEITURA"
// Disciplina  :  [Linguagem e Lógica de Programação]
// Professor   : Antonio Carlos Nicolodi
// Descrição   : Aqui você descreve o que o programa faz! (função)
// Autor(a)    : Junior Santos
// Data atual  : 19/04/2023
Var
   // Seção de Declarações das variáveis
   filho, salario, soma, totalFamilia, maiorSalario, menorSalario: real
   mediaSalarial, mediaFilho: real
Inicio
   // Seção de Comandos, procedimento, funções, operadores, etc...

   salario <- 1

   enquanto (salario >= 0) faca
      escreva("Qual é o seu salário ? ")
      leia(salario)
      se (salario >= 0) entao

         salario <- soma + salario

         se(salario > maiorSalario) entao
            maiorSalario <- salario
         senao
            menorSalario <- salario
         fimse


         escreva("Quantos filhos você tem ? ")
         leia(filho)

         limpatela

         mediaFilho <- filho + 1
         totalFamilia <- totalFamilia + 1
         mediaSalarial <- totalFamilia / salario

      fimse
   fimenquanto

   limpatela

   escreval("Total de famílias que responderam: " ,totalFamilia)
   escreval("Média do salário da população: " ,mediaSalarial)
   escreval("Média de filhos: " ,mediaFilho)
   escreval("Maior salário: " ,maiorSalario)
   escreval("Menor salário: " ,menorSalario)








Fimalgoritmo
